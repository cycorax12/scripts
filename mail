SELECT
    TRUNC(a.date_column) AS report_date,
    COUNT(a.id) AS table_a_count,
    (
        SELECT COUNT(b.id)
        FROM table_b b
        WHERE TRUNC(b.another_date_column) = TRUNC(a.date_column)
    ) AS table_b_count
FROM table_a a
WHERE a.date_column BETWEEN TO_DATE('2025-08-01', 'YYYY-MM-DD') AND TO_DATE('2025-08-31', 'YYYY-MM-DD')
GROUP BY TRUNC(a.date_column)
ORDER BY report_date;
